    MDNavigationDrawer:
        id: nav_drawer
        ContentNavigationDrawer:



<ContentNavigationDrawer@BoxLayout>:
    orientation: "vertical"
    padding: "8dp"
    spacing: "8dp"

    AnchorLayout:
        anchor_x: "left"
        size_hint_y: None
        height: avatar.height

        Image:
            id: avatar
            size_hint: None, None
            size: "56dp", "56dp"
            source: "views/kivymd.png"

    MDLabel:
        text: "KivyMD library"
        font_style: "Button"
        size_hint_y: None
        height: self.texture_size[1]

    MDLabel:
        text: "kivydevelopment@gmail.com"
        font_style: "Caption"
        size_hint_y: None
        height: self.texture_size[1]

    MDRectangleFlatButton:
        text:"Logout"
        on_release: self.parent.parent.parent.back()

    List:

        # DrawerList:
        #     id: md_list


