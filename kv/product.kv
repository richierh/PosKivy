        MDRaisedButton:
            text: "Kembali ke menu awal"
            md_bg_color: 32/255, 123/255, 160/255, 1
            on_release:root.back_mainmenu()
            
        MDBottomAppBar:

            MDToolbar:
                title: "Title"
                icon: "git"
                type: "bottom"
                left_action_items: [["menu", lambda x: x]]
                mode: "free-end"

