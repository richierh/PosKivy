<ItemCardShow>:
    mylabelproduk:mylabelproduk
    myproduct:root.myproduct
    adaptive_height:True
    size_hint:1,1
    screenmanagerproduct:root.screenmanagerproduct

    MDBoxLayout:
        orientation:'vertical'
        adaptive_height:True
        size_hint: 1,.8
        spacing:5

        Image:
            source:"/home/cireng/Projects/Cashier/images/mesinkasir.png"

        MDLabel:
            id:mylabelproduk
            name:'my label'
            halign:'center'

        MDRaisedButton:
            size_hint:0.9,0
            screenmanagerproduct:root.screenmanagerproduct
            text:'Cancel'
            on_release:root.cancel_posscreen()        
            pos_hint:{'center_x':.5 , 'center_y':0}

        MDRaisedButton:
            size_hint:.9,0
            screenmanagerproduct:root.screenmanagerproduct
            text:'Ok'
            on_release:root.back_posscreen()
            pos_hint:{'center_x':.5 , 'center_y':0}
