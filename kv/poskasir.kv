<PosKasir>:
    name:'screen2'
    id:poskasir
    screenmanager:root.screenmanager
    mygrid:mygrid

    MDBottomNavigation:
    
        MDBottomNavigationItem:
            name: "screen 1"

            ScreenManager:
                id:screenmanagerproduct

                MDScreen:
                    name:'screenproductlist'
                    id:screenprou

                    MDBoxLayout:
                        orientation:'vertical'

                        MDBoxLayout:
                            orientation:'horizontal'
                            adaptive_height:True
                            padding: dp(4), dp(4)
                            spacing: dp(4)

                            MDTextFieldRect:
                                hint_text:'cari produk'
                                height: "30dp"

                            MDRaisedButton:
                                text:'cari'

                        ScrollView:
                            do_scroll: True, True
                            size_hint:1,1

                            MDBoxLayout:
                                orientation:'vertical'
                                adaptive_height:True

                                MDGridLayout:
                                    id:mygrid
                                    cols: 5
                                    padding: dp(4), dp(4)
                                    spacing: dp(4)

                        MDBoxLayout:
                            adaptive_height:True
                            orientation:'horizontal'
                            padding: dp(4), dp(4)
                            spacing: dp(4)

                            MDLabel:
                                text:"text aja"
                                can_capitalize:True

                            MDTextFieldRect:

                            MDTextFieldRect:
                            
                            MDRaisedButton:
                                text:'Masukan'

                ItemCardShow:
                    id:itemcardshow
                    myproduct: root.myproduct
                    screenmanagerproduct:screenmanagerproduct
                    name : 'itemcardproduct'
 
        MDBottomNavigationItem:
            name: "screen 2"
            # YourContent:

        MDBottomNavigationItem:
            name: "screen 3"
            id:screenbarcode
            text:'Barcode'

            BarcodeWidget:

        MDBottomNavigationItem:
            name: "screen 4"
            on_tab_press:root.back_mainmenu()

